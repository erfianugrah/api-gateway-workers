# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# See: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,jsonc}]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2
