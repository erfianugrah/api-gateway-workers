{
  "encryption": {
    "key": "YOUR_SECURE_ENCRYPTION_KEY_REQUIRED_IN_PRODUCTION",
    "algorithm": "AES-GCM",
    "iterations": 100000
  },
  "hmac": {
    "secret": "YOUR_SECURE_HMAC_SECRET_REQUIRED_IN_PRODUCTION",
    "algorithm": "SHA-384"
  },
  "keys": {
    "prefix": "km_",
    "defaultExpirationDays": 90,
    "maxNameLength": 255,
    "maxOwnerLength": 255,
    "maxScopeLength": 100,
    "maxScopes": 50
  },
  "logging": {
    "level": "error",
    "includeTrace": false,
    "requestIdHeader": "X-Request-ID"
  },
  "security": {
    "cors": {
      "allowOrigin": "https://your-app.example.com",
      "allowMethods": "GET, POST, PUT, DELETE, OPTIONS",
      "allowHeaders": "Content-Type, Authorization, X-API-Key, X-Request-ID",
      "maxAge": 86400
    },
    "apiKeyHeader": "X-API-Key",
    "headers": {
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY",
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
      "X-XSS-Protection": "1; mode=block",
      "Content-Security-Policy": "default-src 'self'",
      "Referrer-Policy": "no-referrer-when-downgrade"
    }
  },
  "rateLimit": {
    "defaultLimit": 50,
    "defaultWindow": 60000,
    "endpoints": {
      "/validate": { "limit": 200 },
      "/keys": { "limit": 30 },
      "/api/users": { "limit": 25, "window": 30000 }
    },
    "headers": {
      "limit": "X-RateLimit-Limit",
      "remaining": "X-RateLimit-Remaining",
      "reset": "X-RateLimit-Reset"
    }
  },
  "routing": {
    "versioning": {
      "enabled": true,
      "current": "1",
      "supported": ["1", "2"],
      "deprecated": [],
      "versionHeader": "X-API-Version"
    },
    "paramValidation": {
      "id": "[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}",
      "date": "\\d{4}-\\d{2}-\\d{2}",
      "status": "(active|revoked|expired)",
      "customParam": "[a-z]+"
    },
    "priority": {
      "exact": 1,
      "parameter": 2,
      "regex": 3
    }
  },
  "proxy": {
    "enabled": true,
    "timeout": 5000,
    "headers": {
      "X-Forwarded-By": "key-manager-gateway"
    },
    "circuitBreaker": {
      "enabled": true,
      "failureThreshold": 5,
      "resetTimeout": 30000
    },
    "retry": {
      "enabled": true,
      "maxAttempts": 3,
      "backoff": 1000
    },
    "services": {
      "userService": {
        "target": "https://users-internal.example.com",
        "pathRewrite": {
          "^/api/users": ""
        },
        "headers": {
          "X-Internal-Service": "gateway"
        },
        "timeout": 10000
      },
      "authService": {
        "target": "https://auth-internal.example.com",
        "pathRewrite": {
          "^/api/auth": ""
        }
      }
    }
  },
  "maintenance": {
    "cleanupIntervalHours": 24,
    "retryIntervalHours": 1
  }
}